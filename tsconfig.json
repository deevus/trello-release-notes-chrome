{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "typeRoots": [
            "typings",
            "typings/modules",
            "typings/globals",
            "node_modules/@types"
        ],
        // fixes an issue with ts-loader
        // https://github.com/TypeStrong/ts-loader/issues/243
        "types": [
            "node",
            "chrome"
        ],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules"
    ]
}